<h1>Tema</h1>

<p>
  <strong>Nombre:</strong>
  <%= @temario.nombretemario %>
</p>

<p>
  <strong>Descripción:</strong>
  <%= @temario.descripcion %>
</p>



<table border="1">
  <col width="150">
  <col width="160">
  <col width="150">

  <thead>
    <tr>
      <th>Nombre del tema</th>
        <th>Descripción</th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @temas.each do |tema| %>
      <tr>
        <td><%= tema.nombretema %></td>
          <td><%= tema.descripcion %></td>


        <td><%= link_to 'Show', controller: "temas", action: "show", id: tema.id  %></td>
        <td><%= link_to 'Editar', edit_admin_tema_path(tema) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @temas,  :previous_label => 'Atrás', :next_label => 'Adelante'%>
<br>


<%= link_to 'Index', admin_temarios_path %>
<%= link_to 'Atras',:back %>
